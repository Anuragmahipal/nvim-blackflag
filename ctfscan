
#!/bin/bash

# --- CTF CLI TOOL by Anuragmahipal ---

usage() {
    echo "Usage: ctfscan <option> <file>"
    echo ""
    echo "Options:"
    echo "  -ff     Find FLAG{...} in file"
    echo "  -d64    Decode base64"
    echo "  -dhex   Decode hex"
    echo "  -scan   Run exiftool, binwalk, and strings | grep flag"
    echo "  -h      Help"
    exit 1
}

if [ $# -lt 2 ]; then usage; fi

option="$1"
file="$2"

case "$option" in
  -ff)
    grep -aE 'flag\{.*?\}|FLAG\{.*?\}|CTF\{.*?\}' "$file"
    ;;

  -d64)
    base64 -d "$file"
    ;;

  -dhex)
    xxd -r -p "$file"
    ;;

  -scan)
    echo "üì∑ Running exiftool..."
    exiftool "$file"

    echo -e "\nüß© Running binwalk..."
    binwalk "$file"

    echo -e "\nüîé Running smart flag scan..."

    echo -e "\nüß† Detecting base64-like, hex, or obfuscated flag strings:\n"
    strings "$file" | grep -aiE '([A-Za-z0-9+/=]{12,}|flag|f1ag|fl4g|ctf\{)' | grep -vE '^\s*$'
    ;;

  -h)
    usage
    ;;

  *)
    echo "‚ùå Invalid option!"
    usage
    ;;
esac

